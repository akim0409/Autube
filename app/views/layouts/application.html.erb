<!DOCTYPE html>
<html>
  <head>
    <title>Autube</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Roboto', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
    window.logo = "<%= image_url('autube-logo.svg')%>"
    </script>
    <% if current_user %>
      <script>
      window.currentUser = {
        "id": <%= current_user.id %>
        "undername": "<%= current_user.username %>"
        "email": "<%= current_user.email %>"
      }
      </script>
    <% end%>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
